{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.ts",
    "vitest.config.ts",
    "cypress.config.ts",
    "nightwatch.conf.ts",
    "playwright.config.ts"
  ],
  "exclude": [
    "**/*.timestamp-*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": false,
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
